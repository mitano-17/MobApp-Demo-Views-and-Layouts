<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/bandCoveriV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/cover" />

    <TextView
        android:id="@+id/bandNametV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mötley Crüe"
        android:textColor="@color/white"
        android:textSize="50sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/bandCoveriV"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.115"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/bandCoveriV"
        app:layout_constraintVertical_bias="0.726" />

    <TextView
        android:id="@+id/monthlyTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8,676,494 monthly listeners"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/bandCoveriV"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.074"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bandNametV"
        app:layout_constraintVertical_bias="0.209" />

    <TextView
        android:id="@+id/tourTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="On Tour"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.047"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bandCoveriV" />

    <ImageView
        android:id="@+id/calendarIv"
        android:layout_width="71dp"
        android:layout_height="76dp"
        android:layout_marginTop="8dp"
        android:background="#3a3a3a"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tourTV" />

    <TextView
        android:id="@+id/calendarMonthTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="Sep"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/calendarIv"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="@+id/calendarIv"
        app:layout_constraintTop_toTopOf="@+id/calendarIv" />

    <TextView
        android:id="@+id/calendarDayTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="26"
        android:textColor="@color/white"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/calendarIv"
        app:layout_constraintEnd_toEndOf="@+id/calendarIv"
        app:layout_constraintStart_toStartOf="@+id/calendarIv"
        app:layout_constraintTop_toBottomOf="@+id/calendarMonthTv" />

    <Button
        android:id="@+id/purchaseBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="#d140b4"
        android:text="Purchase"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bandCoveriV" />

    <TextView
        android:id="@+id/tourCountryTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="11dp"
        android:layout_marginTop="44dp"
        android:text="Hollywood"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/purchaseBtn"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/calendarIv"
        app:layout_constraintTop_toBottomOf="@+id/bandCoveriV" />

    <TextView
        android:id="@+id/tourVenueTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:layout_marginTop="6dp"
        android:text="Hard Rock Live"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/purchaseBtn"
        app:layout_constraintHorizontal_bias="0.113"
        app:layout_constraintStart_toEndOf="@+id/calendarIv"
        app:layout_constraintTop_toBottomOf="@+id/tourCountryTv" />

    <TextView
        android:id="@+id/tourDateTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:layout_marginTop="4dp"
        android:text="Thu 8:00 PM"
        app:layout_constraintEnd_toStartOf="@+id/purchaseBtn"
        app:layout_constraintHorizontal_bias="0.088"
        app:layout_constraintStart_toEndOf="@+id/calendarIv"
        app:layout_constraintTop_toBottomOf="@+id/tourVenueTv" />

    <ImageButton
        android:id="@+id/favoriteBtn"
        android:layout_width="52dp"
        android:layout_height="47dp"
        android:src="@drawable/grey_star"
        app:layout_constraintBottom_toTopOf="@+id/purchaseBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.891"
        app:layout_constraintStart_toEndOf="@+id/monthlyTv"
        app:layout_constraintTop_toBottomOf="@+id/bandNametV"
        app:layout_constraintVertical_bias="0.297" />

    <TextView
        android:id="@+id/discographyTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Discography"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.057"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/calendarIv" />

    <ImageView
        android:id="@+id/album1Iv"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toStartOf="@+id/album12"
        app:layout_constraintHorizontal_bias="0.417"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/discographyTV"
        app:srcCompat="@drawable/album_1" />

    <ImageView
        android:id="@+id/album12"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/discographyTV"
        app:srcCompat="@drawable/album_2" />

    <TextView
        android:id="@+id/album1NameTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Dr. Feel Good"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/album2NameTv"
        app:layout_constraintHorizontal_bias="0.412"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/album1Iv"
        app:layout_constraintVertical_bias="0.098" />

    <TextView
        android:id="@+id/album2NameTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="56dp"
        android:text="Too Fast For Love"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/album12"
        app:layout_constraintVertical_bias="0.081" />


</androidx.constraintlayout.widget.ConstraintLayout>
